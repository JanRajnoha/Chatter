<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Chatter">

    <Color x:Key="BackgroundGrey">#717171</Color>
    <SolidColorBrush x:Key="BackgroundGreyBrush"  Color="{StaticResource BackgroundGrey}" />

    <Color x:Key="BackgroundDarkerGrey">#4c4c4c</Color>
    <SolidColorBrush x:Key="BackgroundDarkerGreyBrush"  Color="{StaticResource BackgroundDarkerGrey}" />

</ResourceDictionary>